<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="com.iwgdupo.fintech.web.screens.telegramuser">
    <data>
        <instance id="telegramUserDc"
                  class="com.iwgdupo.fintech.entity.TelegramUser"
                  view="_local">
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="telegramUserDc">
            <column width="250px">
                <textField id="msgIdField" property="msgId"/>
                <textField id="userTypeField" property="userType"/>
                <textField id="nameField" property="name"/>
                <textField id="lastNameField" property="lastName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
